#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

case "$(printf ":p  lock\n:p  leave $WM\n:p  renew $WM\n:p  hibernate\n:p  reboot\n:p  shutdown\n:p  sleep\n:p  display off" | dmenu -i -l 10 -X 645 -Y 370 -W 580 -p 'Action: ')" in
	':p  lock') slock ;;
	':p  leave $WM') kill -TERM "$(wmpid)" ;;
	':p  renew $WM') kill -HUP "$(wmpid)" ;;
	':p  hibernate') slock $ctl hibernate -i ;;
	':p  sleep') slock $ctl suspend -i ;;
	':p  reboot') $ctl reboot -i ;;
	':p  shutdown') $ctl poweroff -i ;;
	':p  display off') xset dpms force off ;;
	*) exit 1 ;;
esac
